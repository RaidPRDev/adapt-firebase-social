<div class="social-inner component-inner " ga-on="mouseover" ga-event-category="Social Component" ga-event-action="Mouseover" ga-event-label="Mouseover Social Component">
	<div class="social-header component-header">
		<div class="social-header-inner component-header-inner">
		</div>
		<!-- End of social-header-inner -->  
	  
	</div>
	<!-- End of social-header -->  

  
	<div class="social-comment-form">
		<form action="#" onsubmit="event.preventDefault();">
			<img src="https://teams-service.googleplex.com/photos/?sz=50" style="border-radius:50%">
			<input id="comment" type="text" placeholder="Post a comment..." required="">
			<button class="btnSubmit " type="submit" ga-event-category="Social Component" ga-event-action="Click" ga-event-label="Submit parent post">SUBMIT</button>
		</form>
	</div>
	<!-- End of social-comment-form -->
  
	<div class="flex items-start">
		<div class="social-comment-box">
		
			<span id="sTime" class="btnSort sortTime btnSort-active">Recent</span>
			<span id="sVotes" class="btnSort sortVotes">Top</span>
		
			<ul id="comments" style="max-height:684px" data-id="{{_id}}"></ul>
			<!-- End of comments -->
			
			<li id="commentTemplate">
				<div class="user-description">
						<div class="vote vote-top">
							<span class="toggle reply-count">replies</span>
							<div class="flex flex-column items-center favorite-container">
								<i class="material-icons">favorite</i>
								<span class="user-votes"></span>
							</div>
						</div>
						<span class="user-photo"></span>
						<div class="row user-info">
							<span class="user-username"></span>
							<div class="user-specs">
								<span class="user-points"></span>
								<span class="user-date"></span>
								<span class="user-time"></span>
								<span class="user-location"></span>
							</div>
							<p class="user-comment">test</p>
						</div>
						<!-- End of user-info -->
					</div>
					<!-- End of user-description -->
					<div class="bottom-interactions"></div>
					<div class="vote vote-bottom">
						<div class="flex flex-column items-center favorite-container">
							<i class="material-icons upvote" data-vote="up" ga-event-category="Social Component" ga-event-action="Click" ga-event-label="Comment">favorite_border</i>
							<span class="like-text">liked</span>
						</div>
					</div>
					<!-- End of vote-bottom -->
					<span class="toggle reply-button">
						Show replies
					</span>
					<span class="toggleReply">
						<i class="material-icons">reply</i>
						reply
					</span>
					<span class="delete">Remove</span>
					<form class="subComments" style="display: none;">
						<input id="comment" type="text" placeholder="Reply to post above..." required="">
						<button class="subComment" ga-event-category="Social Component" ga-event-action="Click" ga-event-label="Submit reply">REPLY</button>
					</form>
					<ul class="sub-comments"></ul>			
			</li>
			<!-- End of commentTemplate -->
		
		</div>
		<!-- End of social-comment-box -->
	
	</div>
	<!-- End of items-start -->


</div>
<!-- End of social-inner -->  